        </ros>
      </plugin>
    </sensor>
  </gazebo> -->
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="${(body_length/2) + 0.01} 0 ${body_height*0.7  + 0.02}" rpy="0 0 0"/>
  </joint>

</robot>
